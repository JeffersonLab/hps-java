                <module_placement name="TestRunModule" id="1" x="z6b*sin(y_rot)+(x6b+x_off)*cos(y_rot)" y="y6b+(pivot-z6b)*sin(x_rot_bot_add)" z="z6b*cos(y_rot)-(x6b+x_off)*sin(y_rot)" rx="x_rot_bot+x_rot_bot_add" ry="3.14159-y_rot" rz="-4.712386326794896-a6b"/>
            </layer>
            <layer id="7">
                <module_placement name="TestRunModule" id="0" x="z7t*sin(y_rot)+(x7t+x_off)*cos(y_rot)" y="y7t+(pivot-z7t)*sin(x_rot_top_add)" z="z7t*cos(y_rot)-(x7t+x_off)*sin(y_rot)" rx="x_rot_top+x_rot_top_add" ry="-y_rot" rz="-1.5707963267948966-a7t"/>
                <module_placement name="TestRunModule" id="1" x="z7b*sin(y_rot)+(x7b+x_off)*cos(y_rot)" y="y7b+(pivot-z7b)*sin(x_rot_bot_add)" z="z7b*cos(y_rot)-(x7b+x_off)*sin(y_rot)" rx="x_rot_bot+x_rot_bot_add" ry="-y_rot" rz="-1.6207963267948966-a7b"/>
            </layer>
            <layer id="8">
                <module_placement name="TestRunModule" id="0" x="z8t*sin(y_rot)+(x8t+x_off)*cos(y_rot)" y="y8t+(pivot-z8t)*sin(x_rot_top_add)" z="z8t*cos(y_rot)-(x8t+x_off)*sin(y_rot)" rx="x_rot_top+x_rot_top_add" ry="3.14159-y_rot" rz="-4.762386326794896-a8t"/>
                <module_placement name="TestRunModule" id="1" x="z8b*sin(y_rot)+(x8b+x_off)*cos(y_rot)" y="y8b+(pivot-z8b)*sin(x_rot_bot_add)" z="z8b*cos(y_rot)-(x8b+x_off)*sin(y_rot)" rx="x_rot_bot+x_rot_bot_add" ry="3.14159-y_rot" rz="-4.712386326794896-a8b"/>
            </layer>
            <layer id="9">
                <module_placement name="TestRunModule" id="0" x="z9t*sin(y_rot)+(x9t+x_off)*cos(y_rot)" y="y9t+(pivot-z9t)*sin(x_rot_top_add)" z="z9t*cos(y_rot)-(x9t+x_off)*sin(y_rot)" rx="x_rot_top+x_rot_top_add" ry="-y_rot" rz="-1.5707963267948966-a9t"/>
                <module_placement name="TestRunModule" id="1" x="z9b*sin(y_rot)+(x9b+x_off)*cos(y_rot)" y="y9b+(pivot-z9b)*sin(x_rot_bot_add)" z="z9b*cos(y_rot)-(x9b+x_off)*sin(y_rot)" rx="x_rot_bot+x_rot_bot_add" ry="-y_rot" rz="-1.6207963267948966-a9b"/>
            </layer>
            <layer id="10">
                <module_placement name="TestRunModule" id="0" x="z10t*sin(y_rot)+(x10t+x_off)*cos(y_rot)" y="y10t+(pivot-z10t)*sin(x_rot_top_add)" z="z10t*cos(y_rot)-(x10t+x_off)*sin(y_rot)" rx="x_rot_top+x_rot_top_add" ry="3.14159-y_rot" rz="-4.762386326794896-a10t"/>
                <module_placement name="TestRunModule" id="1" x="z10b*sin(y_rot)+(x10b+x_off)*cos(y_rot)" y="y10b+(pivot-z10b)*sin(x_rot_bot_add)" z="z10b*cos(y_rot)-(x10b+x_off)*sin(y_rot)" rx="x_rot_bot+x_rot_bot_add" ry="3.14159-y_rot" rz="-4.712386326794896-a10b"/>
            </layer> 
        </detector>     
        <detector id="13" name="Ecal" type="HPSEcal3" insideTrackingVolume="false" readout="EcalHits" vis="ECALVis">
            <comment>The crystal ECal</comment>
            <material name="LeadTungstate" />
            <dimensions x1="ecal_front" y1="ecal_front" x2="ecal_back" y2="ecal_back" z="ecal_z" />
            <!-- Measurements as found in installation by Stepan -->
            <layout beamgap="37.0*mm" nx="46" ny="5" dface="152.4*cm">
                <remove ixmin="-10" ixmax="-2" iymin="-1" iymax="1" />
                <top dx="ecal_dx" dy="0." dz="0."/>
                <bottom dx="ecal_dx" dy="0." dz="0."/>
            </layout>
        </detector>
    </detectors>
    
    <readouts>   
        <readout name="TrackerHits">
            <id>system:6,barrel:3,layer:4,module:12,sensor:1,side:32:-2,strip:12</id> 
        </readout>
        <readout name="EcalHits">
            <segmentation type="GridXYZ" gridSizeX="0.0" gridSizeY="0.0" gridSizeZ="0.0" />
            <id>system:6,layer:2,ix:-8,iy:-6</id>
        </readout>
    </readouts>

    <fields>
        <field type="BoxDipole" name="AnalyzingDipole" x="0*cm" y="0*cm" z="45.22*cm" dx="22.86*cm" dy="7.62*cm" dz="46.22*cm" bx="0.0" by="-0.491" bz="0.0">     
        </field>
    </fields>

    <includes>
        <gdmlFile ref="http://www.lcsim.org/test/gdml/testRunDownstreamVacuumFlange.gdml" />
    </includes>

</lccdd>
